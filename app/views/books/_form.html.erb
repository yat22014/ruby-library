<%= form_with model: book do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% book.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %><br>
      <% book.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :status %><br>
      <%= form.select :status, BookVisible::VALID_STATUSES, selected: book.status || 'in_stock' %>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>